@model IEnumerable<Lift_application.Models.Articles>

@using Lift_application.Models;

@{
    ViewData["Title"] = "Главная";
    
}

<!DOCTYPE html>

<html>
<head>
    <title>Главная</title>

    <style>
        .brd
        {
             background:gray;
             padding:20px;
        }
    </style>
</head>
<body>
    <h3>Материалы</h3>
    
        
        @foreach (var phone in Model)
        {
            

        @if(phone.SourceInfo == "" || phone.SourceInfo == "My" || phone.SourceInfo =="-")
        {
           <div class="brd">
                <h2><a href="~/Home/Articles/@phone.Id">@phone.Title</a></h2>
            <p>@phone.Description</p>
           </div>
           <br/>
        }
        else
        {
            <div class="brd">
                <h2>@phone.Title</h2>
                <p>@phone.Description</p>
                <p>Источник: <a href="@phone.SourceInfo">@phone.SourceInfo</a></p>
            </div>
            <br />
        }

    }
    
    
</body>
</html>