@model Lift_application.Models.Articles
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
@using Lift_application.Areas.Identity.Data
@inject SignInManager<Lift_applicationUser> SignInManager;
@inject UserManager<Lift_applicationUser> UserManager

<h1> @Html.Raw(Model.Title)</h1>
<p>@Html.Raw(Model.Text)</p>
<p>Автор: @Html.Raw(Model.Author)</p>
<p>Дата публикации: @Html.Raw(Model.date)</p>
@if (SignInManager.IsSignedIn(User))
{
    if (User.IsInRole("admin"))
    {
        <a href="~/UserPanel/Delete/@Model.Id">Удалить</a>
    }
}
