@{
}
@model IEnumerable<Lift_application.Models.ParseArticlesModel>
<style>
    .Parse
    {
        background-color:gray;
        padding:20px;
    }
    .col
    {
        color:white;
    }
</style>
@foreach(var ParseArticle in Model)
{
    if (ParseArticle.Title != "" || ParseArticle.Text != "")
    {
        <div class="Parse">
            <h1 class="col">@ParseArticle.Title</h1>
            <p>@ParseArticle.Text</p>
            <a href="@ParseArticle.SourceInfo">Источник</a>
            



            <br />
            <a href="~/UserPanel/ParserPublishSend/@ParseArticle.Id">Опубликовать</a>
            <a href="~/UserPanel/ParserPublishDelete/@ParseArticle.Id">Удалить</a>
        </div>
        <br />
    }
}

    
