@{
}
@model IEnumerable<Lift_application.Models.ParseArticlesModel>
<style>
    .Parse
    {
        background-color:gray;
        padding:20px;
    }
    .col
    {
        color:white;
    }
</style>
@foreach(var ParseArticle in Model)
{
   <div class="Parse">
       <h1 class="col">@ParseArticle.Title</h1>
    <p>@ParseArticle.Text</p>
    <br/>
    <a href="~/UserPanel/ParserPublishSend/@ParseArticle.Id">Опубликовать</a>
   </div>
   <br />
}