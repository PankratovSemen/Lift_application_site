@{
}
@using Microsoft.AspNetCore.Identity
@using Lift_application.Areas.Identity.Data
@inject SignInManager<Lift_applicationUser> SignInManager;
@inject UserManager<Lift_applicationUser> UserManager
@{
    Layout = "LA/Admin_La.cshtml";
}

@if (SignInManager.IsSignedIn(User))
{
    
    if (User.IsInRole("admin"))
    {
        <h1>AdminPanel</h1>

        <a asp-controller="UserPanel" asp-action="Publish">Публикация статей</a>
        <br />
                <a asp-controller="UserPanel" asp-action="CreateSender">Рассылки</a>
                <br />
        <a asp-controller="UserPanel" asp-action="OptionsSender">Настройка подписки</a>
        <br />
        <a href="~/UserPanel/Parser?urls=all">Другие источники</a>
        <br />
        <a href="~/Roles">Роли</a>
    }
    else
    {
        <p>Вы вошли в личный кабинет</p>
        <br />
        <a asp-controller="UserPanel" asp-action="OptionsSender">Настройка подписки</a>
    }
}


else
{
}